<div class="container">
  <div class="row row-cols-1 row-cols-md-2">
    {{#each recipes}}
    <div class="col mb-4">
      <div class="card card-list">
        <a href="/recipes/detail/{{_id}}">
          <img src="{{imgPath}}" class="card-img-top" alt="Recipe">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">Duration: {{duration}} min</p>
          </div>
        </a>
      </div>
    </div>
    {{/each}}
  </div>
</div>
